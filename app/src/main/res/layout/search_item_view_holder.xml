<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:padding="10dp"
    android:layout_margin="15dp"
    android:elevation="15dp"
    app:cardCornerRadius="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@android:color/darker_gray"
            android:id="@+id/dish_image_search_item"
            />

        <TextView
            android:id="@+id/dish_name_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Dish name 1234567890"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
            android:ems="9"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_gravity="start"
            android:layout_marginVertical="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="9"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="something + something + something"
            android:layout_gravity="start"
            android:id="@+id/dish_content_search"
            />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rs.120"
            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
            android:layout_gravity="end"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            android:id="@+id/dish_price_search"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>