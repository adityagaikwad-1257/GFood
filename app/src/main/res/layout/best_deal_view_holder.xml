<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    app:cardCornerRadius="5dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/best_deal_dish_image_view_holder"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <TextView
            android:id="@+id/best_deal_name_view_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/best_deal_dish_image_view_holder"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:ems="10"
            android:maxLines="2"
            android:text="Dish name 1234567890123456789012345678901234567890"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/best_deal_dish_descriptive_view_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/best_deal_name_view_holder"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:maxLines="3"
            android:text="something + something + something"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/best_deal_dish_image_view_holder"
            android:layout_alignParentEnd="true"
            android:layout_margin="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dish_original_price_best_deal_view_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke"
                android:text="Rs. 200"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="@android:color/darker_gray"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dish_our_price_best_deal_view_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 100"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>